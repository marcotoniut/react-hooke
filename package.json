{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "author": "Marco Toniut",
  "license": "ISC",
  "description": "Collection of hooks and functions to better integrate the ecosystem with several popular libraries",
  "keywords": [
    "react",
    "hooks",
    "rxjs"
  ],
  "homepage": "https://github.com/marcotoniut/react-hooke#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcotoniut/react-hooke.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "format": "prettier --write *.$npm_package_config_prettier_extensions **/*.$npm_package_config_prettier_extensions"
  },
  "config": {
    "prettier_extensions": "{ts,tsx,js,json}"
  },
  "bugs": {
    "url": "https://github.com/marcotoniut/react-hooke/issues"
  },
  "devDependencies": {
    "jest": "^27.4.5",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "prettier": "^2.5.1"
  }
}
